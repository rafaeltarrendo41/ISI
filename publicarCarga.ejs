  <script>
    window.onload = () => {

      const atualizar = document.getElementById("refresh");
      const newFunction = async () => {
            document.getElementById("formCarga").reset();
            console.log("limpa")
         }


      atualizar.addEventListener('click', async (event) => {
        renderGestores();
      })

      const tblGestores = document.getElementById("tabel1");

      const renderGestores = async () => {

        let strHtml = `
<thead>
  <tr>
    <th>Origem</th>
    <th>Destino</th>
    <th>Especialidade</th>
    <th>Ton</th>
  </tr>

</thead>
<tbody>
`

        const response = await fetch(`https://wtransnet.herokuapp.com/getTransportes`)
        const gestores = await response.json()
        const g = gestores.body;
        console.log(g);
        let i = 1
        for (let i = 0; i < g.length; i++) {

          strHtml += `
<tr>

<td class='text-center'>${g[i].origem}</td>
<td class='text-center'>${g[i].destino}</td>
<td class='text-center'>${g[i].especialidade}</td>
<td class='text-center'>${g[i].peso}</td>

</tr>
`

        }
        strHtml += "</tbody>"
        tblGestores.innerHTML = strHtml
      }

      renderGestores();


     

      const aa = localStorage.getItem('companyID');
      console.log(aa);
      const form = document.getElementById('formCarga');

      form.addEventListener("submit", async (event) => {
        document.getElementById("btn-submeter").disabled = true;
        event.preventDefault();

        const origem = document.getElementById("origem");
        const destino = document.getElementById("destino");
        const especialidade = document.getElementById("especialidade");
        const peso = document.getElementById("kg");

        let properties = {
          user_id: aa,
          origem: origem.value,
          destino: destino.value,
          especialidade: especialidade.value,
          peso: peso.value
        }

        console.log(properties);
        return fetch(`https://wtransnet.herokuapp.com/insertProductJASMIN`, {
          headers: {
            "Access-Control-Allow-Origin": "*",
            "Accept": "application/json",
            'Content-Type': 'application/json'
          },
          method: 'POST',
          body: JSON.stringify(properties)

        }).then(response => {
          return response.json();
        }).then(result => {
          console.log(result.message);
          if (result.message == "criado") {
            Swal.fire('Carga criada com sucesso')
            newFunction();
          } else if (result.message == "erro ao adicionar produto") {
            Swal.fire('Erro ao criar a carga')
          }
          Swal.fire(result);
        }).catch(error => {
          document.getElementById("btn-submeter").disabled = false;
          Swal.fire({
            html: '<strong><h3>Ocorreu um erro! Tente novamente mais tarde. Obrigado!</h3></strong>',
            showCancelButton: false,
            showConfirmButton: false,
            type: 'error',
            timer: 2000
          })
        })
      })
    }
