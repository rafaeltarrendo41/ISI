  <script>
    

    window.onload = () => {
      const tblValidar = document.getElementById("tabel1");

      const a = localStorage.getItem('companyID');
      console.log(a);

      const renderValidacao = async () => {
        let strHtml = `
    <thead>
      <tr>
          <th>Seleção</th>
          <th>ID Fatura</th>
          <th>Dados</th>
          <th>Valor</th>
        </tr>
        </thead>
        <tbody>
    `
        const properties = {
          idCompanie: a
        }
        const response = await fetch(`https://wtransnet.herokuapp.com/pagamentos`, {
          headers: {
            "Access-Control-Allow-Origin": "*",
            "Accept": "application/json",
            'Content-Type': 'application/json'
          },
          method: 'POST',
          body: JSON.stringify(properties)
        });
        const empresas = await response.json();

        console.log(empresas);
        if (empresas.length == 0) {
          Swal.fire({
            title: 'Nenhum pagamento disponível',
            icon: 'success',
            //pe: 'success',
          })
        } else {
          const tamanho = Object.keys(empresas);
          console.log(tamanho.length);
          let i = 1;
          for (let i = 0; i < tamanho.length; i++) {

            strHtml += `
        <tr>
            <td>
              <input type="button" value="Pagar" class="pagar" id="paypal-button">
            </td> 
            <td class='text-center' id="produto">${empresas[i].idCompra}</td>
            <td>
            <input type="button"  class='dados' value="Dados">
            </td>
            <td class='text-center'>30.75€</td>
        </td>
        
        </tr>
    `
          }
          strHtml += "</tbody>"
          tblValidar.innerHTML = strHtml
        }

        //ver dados
        const btnDados = document.getElementsByClassName("dados");
        console.log(btnDados.length)
        for (let i = 0; i < btnDados.length; i++) {
          btnDados[i].addEventListener("click", () => {

            Swal.fire({
              title: 'Dados da operação:',
              text: 'Origem:' + empresas[i].origem + '\n' + 'Destino:' + empresas[i].destino + '\n' + 'Especialidade:' + empresas[i].especialidade + '\n' + 'Ton:' + empresas[i].peso

            })
          })
        }

        //pagar
        const radio = document.getElementsByClassName("pagar");
        for (let i = 0; i < radio.length; i++) {
          console.log(radio[i].getAttribute("id"))
          radio[i].addEventListener("click", () => {
            var status = ""
            console.log("aqui")
            paypal.Buttons({
              style: {
                color: 'blue',
                shape: 'pill'
              },
              createOrder: function (data, actions) {
                return actions.order.create({
                  purchase_units: [{
                    amount: {
                      value: '30.75',
                      currency: 'EUR'
                    }
                  }]
                });
              },
              onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                  console.log(details)
                  status = details.status
                  console.log(status)
                  if (details.status == "COMPLETED") {
                  
                    
                   const properties = {
                      companie_id: a,
                      compraID: empresas[i].idCompra
                    }
                    console.log(properties);
                    return fetch(`https://wtransnet.herokuapp.com/pagar`, {
                      headers: {
                        "Access-Control-Allow-Origin": "*",
                        "Accept": "application/json",
                        'Content-Type': 'application/json'
                      },
                      method: 'POST',
                      body: JSON.stringify(properties)

                    }).then(result => {
                      console.log(result)
                      if (result.message = 'pago') {
                        Swal.fire({
                          title: 'Pagamento Registado',
                          icon: 'success',
                          //type: 'success',
                        })
                        location.reload()
                      } else {
                        Swal.fire({
                          title: 'Pagamento não validado',
                          icon: 'error',
                          // type: 'success',
                        })
                        renderValidacao();
                      }
                    }).catch(error => {
                      Swal.fire({
                        html: '<strong><h3>Ocorreu um erro! Tente novamente mais tarde. Obrigado!</h3></strong>',
                        showCancelButton: false,
                        showConfirmButton: false,
                        icon: 'error',
                        timer: 2000
                      })
                    })

                  }
                })
              }
            }).render('#paypal-button');
          })

        }

        //aceitar
        const btnAceitar = document.getElementsByClassName("aceitar");
        for (let i = 0; i < btnAceitar.length; i++) {
          btnAceitar[i].addEventListener("click", () => {
            Swal.fire({
              title: "Tem a certeza que deseja efetuar o pagamento?",
              // type: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#086A87',
              cancelButtonColor: '#7e7e7e',
              cancelButtonText: 'Não',
              confirmButtonText: 'Sim'
            }).then(async (result) => {
              if (result.value) {
                let idCompanie = btnAceitar[i].getAttribute("id");
                const properties = {
                  'idCompanie': idCompanie,
                  'email': empresas[i].email
                }
                console.log(properties)
                try {

                  return fetch(`https://wtransnet.herokuapp.com/validarCompanie`, {
                    headers: {
                      "Access-Control-Allow-Origin": "*",
                      "Accept": "application/json",
                      'Content-Type': 'application/json'
                    },
                    method: 'POST',
                    body: JSON.stringify(properties)

                  }).then(response => {
                    return response.json();
                  }).then(result => {
                    console.log(result)
                    if (result.verificado) {
