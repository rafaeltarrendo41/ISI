  <script>
    const id = localStorage.getItem('companyID');
    const bodyPedido = {
      companieID: id
    }

    window.onload = () => {
      const tblValidar = document.getElementById("tabel1");

      const renderValidacao = async () => {
        let strHtml = `
    <thead>
      <tr>
          <th>Origem</th>
          <th>Destino</th>
          <th>Especialidade</th>
          <th>Peso(Ton)</th>
          <th>Visualizar</th>
        </tr>
        </thead>
        <tbody>
    `
        // const response = await fetch(`https://wtransnet.herokuapp.com/verDocumentos`,
        //   body: bodyPedido
        // );
        // const empresas = await response.json();
        return fetch(`https://wtransnet.herokuapp.com/verDocumentos`, {
          headers: {
            "Access-Control-Allow-Origin": "*",
            "Accept": "application/json",
            'Content-Type': 'application/json'
          },
          method: 'POST',
          body: JSON.stringify(bodyPedido)
        }).then(response => {
          return response.json();
        }).then(result => {
          console.log(result)
          if (result.length == 0) {
            Swal.fire({
              title: 'Nenhum documento encontrado',
              icon: 'success',
              //pe: 'success',
            })
          } else {
            for (let i = 0; i < result.length; i++) {
              strHtml += `
        <tr>
           
            <td class='text-center'>${result[i].origem}</td>
            <td class='text-center'>${result[i].destino}</td>
            <td class='text-center'>${result[i].especialidade}</td>
            <td class='text-center'>${result[i].ton}</td>
            <td>
            <input type="button"  onclick="window.open('${result[i].fatura}');" value="Ver">
            </td>
        
        </tr>
    `
            }
            strHtml += "</tbody>"
            tblValidar.innerHTML = strHtml
          }
        })
      }
      renderValidacao();
